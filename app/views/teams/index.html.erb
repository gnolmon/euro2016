<p id="notice"><%= notice %></p>

<h1>Listing Teams</h1>

<table>
  <thead>
    <tr>
      <th>Ensign</th>
      <th>Group</th>
      <th>Name</th>
      <th>Point</th>
      <th>Won</th>
      <th>Draw</th>
      <th>Lost</th>
      <th>Goal difference</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @teams.each do |team| %>
      <tr>
        <td><%= team.ensign %></td>
        <td><%= team.group %></td>
        <td><%= team.name %></td>
        <td><%= team.point %></td>
        <td><%= team.won %></td>
        <td><%= team.draw %></td>
        <td><%= team.lost %></td>
        <td><%= team.goal_difference %></td>
        <td><%= link_to 'Show', team %></td>
        <td><%= link_to 'Edit', edit_team_path(team) %></td>
        <td><%= link_to 'Destroy', team, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

